<%- include('../layout/partials/messages.ejs') %>
    <div class="bodyEnquiry">

        <form action="" method="post">
            <div class="business-contact-form">
                <div class="contact-form-heading">
                    <h2 class="contact-form-h2">Got any queries or questions? <br>
                        Weâ€™ll be happy to help!</h2>
                </div>

                <div class="container">
                    <!-- <form action="" method="post"> -->
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <div class="contact-form-row1">
                                <div class="row ">
                                    <div class=" contact-form-input">
                                        <input type="text" class="form-control      text-uppercase  contact-input"
                                            value="<%= typeof rows?.name != 'undefined' ? rows?.name : '' %>"
                                            name="name" placeholder="Name*" aria-label="Name*" required>
                                    </div>
                                    <div class=" contact-form-input">
                                        <input type="email" class="form-control contact-input" name="email"
                                            value="<%= typeof rows?.email != 'undefined' ? rows?.email : '' %>"
                                            placeholder="Email*" aria-label="Email" required>
                                    </div>
                                    <div class=" contact-form-input">
                                        <input type="number" class="form-control contact-input" placeholder="Mobile*"
                                            value="<%= typeof rows?.mobile!= 'undefined' ? rows?.mobile : '' %>"
                                            name="mobile" aria-label="Mobile"
                                            oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
                                            maxLength="10" required>
                                    </div>
                                    <div class="contact-form-input">
                                        <select id="inputState" name="purpose" class="form-select contact-select"
                                            value="<%= typeof rows?.purpose != 'undefined' ? rows?.purpose : '' %>"
                                            required>
                                            <option selected disabled value="">Purpose*</option>
                                            <option value="1" <%=selectedPurpose==1 ? 'selected' : '' %>
                                                >Feedback/Suggestions</option>
                                            <option value="2" <%=selectedPurpose==2 ? 'selected' : '' %>>Trade Enquiry
                                            </option>
                                        </select>
                                    </div>

                                    <div class=" contact-form-input">
                                        <input type="text" class="form-control   text-uppercase contact-input"
                                            value="<%= typeof rows?.location != 'undefined' ? rows?.location : '' %>"
                                            name="location" placeholder="Location*" aria-label="Location" required>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="contact-form-row2">
                                <div class="row ">
                                    <div class=" contact-form-input2">
                                        <div class="form-floating">
                                            <textarea class="form-control   text-uppercase contact-input2"
                                                placeholder="Message*" id="message" name="message"
                                                required><%= typeof rows?.message != 'undefined' ? rows?.message : '' %></textarea>
                                        </div>
                                    </div>
                                    <div class="contact-form-input2">
                                        <div class="captcha-margin" style="width: 304px; height: 78px; ">
                                            <div><iframe title="reCAPTCHA"
                                                    src="https://www.google.com/recaptcha/api2/anchor?ar=1&amp;k=6LfRnckkAAAAAMCvNHHXAJqSGB0qi3RXF9LAKtYe&amp;co=aHR0cDovLzE0Ni41Ni40OS4yMDo4MA..&amp;hl=en&amp;type=image&amp;v=1h-hbVSJRMOQsmO_2qL9cO0z&amp;theme=light&amp;size=normal&amp;badge=bottomright&amp;cb=3d0zay1krorb"
                                                    width="304" height="78" role="presentation" name="a-m41cxo4xuzn2"
                                                    frameborder="0" scrolling="no"
                                                    sandbox="allow-forms allow-popups allow-same-origin allow-scripts allow-top-navigation allow-modals allow-popups-to-escape-sandbox"></iframe>
                                            </div><textarea id="g-recaptcha-response" name="g-recaptcha-response"
                                                class="g-recaptcha-response"
                                                style="width: 250px; height: 35px; border: 1px solid rgb(193, 193, 193); margin: 10px 25px; padding: 0px; resize: none; display: none;"></textarea>
                                        </div><iframe style="display: none;"></iframe>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="contact-form-btn">
                        <button type="submit" class="text-center contact-btn">Submit</button>
                    </div>

                </div>
            </div>
        </form>
    </div>