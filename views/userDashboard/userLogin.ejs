<%- include('../layout/partials/messages.ejs') %>
    <div class="bodyLogin">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="panel panel-login">
                        <div class="panel-heading">
                            <div class="row">

                                <a class="active-login text-center" id="login-form-link"><i
                                        class="bi bi-box-arrow-in-right"></i> Login</a>

                            </div>
                            <hr>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <form id="login-form" class="login-form" action="" method="post" role="form">
                                        <input type="text" name="id" id="id" hidden>
                                        <div class="form-group">
                                            <input type="email" name="email" id="email" tabindex="1"
                                                class="form-control      form-control-input" placeholder="Email"
                                                value="">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" name="password" id="password" tabindex="2"
                                                class="form-control      form-control-input" placeholder="Password">
                                        </div>
                                        <!-- <div class="form-group text-center">
                                            <input type="checkbox" tabindex="3" class="" name="remember" id="remember">
                                            <label for="remember"> Remember Me</label>
                                        </div> -->
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-sm-6 col-sm-offset-3">
                                                    <input type="submit" name="login-submit" id="login-submit"
                                                        tabindex="4" class="form-control     btn btn-login"
                                                        value="Log In">
                                                </div>
                                            </div>
                                        </div>

                                    </form>


                                </div>
                            </div>
                        </div>
                        <div class="panel-footer">
                            <div class="row">
                                <div class="flex-footer">
                                    <div class="col-xs-6">
                                        No Account? <a href="/user/register" class="active-register"
                                            id="register-form-link"> Register</a>
                                    </div>
                                    <div class="col-xs-6">
                                        Forgot Password? <a href="/user/sendResetLink" class="active-login text-center"
                                            id="login-form-link"> Reset</a>
                                    </div>
                                    <!-- <div class="col-xs-6">
                                        Forgot Password? <a href="/dashboard" class="active-login text-center"
                                            id="login-form-link">Reset</a>
                                    </div> -->
                                </div>
                            </div>
                            <hr>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>