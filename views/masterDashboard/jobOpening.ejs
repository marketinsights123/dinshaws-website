<%- include('../layout/partials/messages.ejs') %>
    <div class="bodyLogin">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="panel panel-login">
                        <div class="panel-heading ">
                            <div class="row">


                                <a class="active-register" id="register-form-link"> <span
                                        class='bi bi-briefcase-fill'></span>
                                    Job Opening Master</a>

                            </div>
                            <hr>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">

                                    <form id="register-form" action="" method="post" role="form">
                                        <input type="text" name="id" id="id" hidden>
                                        <div class="form-group job-select">
                                            <!-- <input type="text" name="department" id="department" tabindex="1"
                                                class="form-control   text-uppercase   form-control-input" placeholder="Department"
                                                value=""> -->
                                            <select class="job-list" name="department_id"
                                                placeholder="Select Department">
                                                <option class="text-black" value="" disabled selected>Select Department
                                                </option>
                                                <% departments.forEach(function(department) { %>
                                                    <option value="<%= department.id %>"
                                                        <%=selectedDepartment==department.id ? 'selected' : '' %>>
                                                        <%= department.name %>
                                                    </option>
                                                    <% }) %>
                                            </select>

                                        </div>
                                        <div class="form-group">
                                            <input type="text" name="description" id="description" tabindex="1"
                                                class="form-control   text-uppercase   form-control-input"
                                                value="<%= typeof rows?.description != 'undefined' ? rows?.description : '' %>"
                                                placeholder="Description" value="">
                                        </div>
                                        <div class="form-group">
                                            <input type="text" name="location" id="location" tabindex="2"
                                                class="form-control   text-uppercase   form-control-input"
                                                value="<%= typeof rows?.location != 'undefined' ? rows?.location : '' %>"
                                                placeholder="Location">
                                        </div>

                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-sm-6 col-sm-offset-3">
                                                    <input type="submit" name="register-submit" id="register-submit"
                                                        tabindex="4"
                                                        class="form-control   text-uppercase    btn btn-register"
                                                        value="Submit">
                                                </div>
                                            </div>
                                        </div>

                                    </form>


                                </div>

                            </div>
                        </div>
                        <div class="panel-footer">
                            <div class="row">



                                <a href="javascript:history.back()" class="active-login" id="login-form-link"><span
                                        class='bi bi-arrow-left-circle-fill'></span> Back</a>



                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>