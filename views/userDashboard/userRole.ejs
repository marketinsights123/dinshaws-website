<%- include('../layout/partials/messages.ejs') %>
    <div class="bodyLogin">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="panel panel-login">
                        <div class="panel-heading">
                            <div class="row">

                                <a class="active-login text-center" id="login-form-link"><span
                                        class='bi bi-person-plus-fill'></span> User Role Master</a>

                            </div>
                            <hr>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">

                                    <form id="login-form" class="login-form" action="" method="POST" role="form">

                                        <input type="text" id="id" name="id" hidden>

                                        <div class="form-group">
                                            <input type="text" name="role_name" id="role_name" tabindex="1"
                                                class="form-control   text-uppercase   form-control-input"
                                                placeholder="Enter Role Name" value="" required>
                                        </div>

                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-sm-6 col-sm-offset-3">
                                                    <input type="submit" name="login-submit" id="login-submit"
                                                        tabindex="4" class="form-control       btn btn-login"
                                                        value="Submit">
                                                </div>
                                            </div>
                                        </div>

                                    </form>


                                </div>
                            </div>
                        </div>
                        <div class="panel-footer">
                            <div class="row">

                                <a href="javascript:history.back()" class="active-login" id="login-form-link"><span
                                        class='bi bi-arrow-left-circle-fill'></span> Back</a>

                            </div>
                        </div>
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>